{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "bundler",
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}